{% extends 'base.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
    <h1>Panier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPanier</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.idPanier }}</td>
                <td>
                    <a href="{{ path('app_panier_show', {'idPanier': panier.idPanier}) }}">show</a>
                    <a href="{{ path('app_panier_edit', {'idPanier': panier.idPanier}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_panier_new') }}">Create new</a>

    {# pop up ki panier est deja existe  ---------------------------------  #}
    {% if app.request.query.get('error_message') is not empty %}
        <script>
            {# alert("this user already have a cart !"); #}
            var popup = document.createElement('div');
            popup.innerHTML =  "{{ app.request.query.get('error_message')|e('js') }}";
            popup.style.position = 'fixed';
            popup.style.top = '10%';
            popup.style.left = '50%';
            popup.style.transform = 'translate(-50%, -50%)';
            popup.style.padding = '20px';
            popup.style.border = '1px solid black';
            popup.style.backgroundColor = 'white';
            popup.style.zIndex = '9999';
            document.body.appendChild(popup);
            popup.style.fontSize = '1.2rem';
            popup.style.color = '#333';
            popup.style.backgroundColor = '#fff';
            popup.style.boxShadow = '0 2px 4px rgba(0, 0, 0, 0.3)';
            popup.style.borderRadius = '5px';
            popup.style.padding = '20px';
            setTimeout(function() {
                //window.location.replace("/panier"); mesh sur men hethi u can't move back to the previous page util fi cas hetha
                document.body.removeChild(popup);

            }, 3000);
        </script>
    {% endif %}
    {# pop up ki panier t creata successfuly  ---------------------------------  #}
    {% if app.request.query.get('success_message') is not empty %}
        <script>
            var popup = document.createElement('div');
            popup.innerHTML = "{{ app.request.query.get('success_message')|e('js') }}";
            popup.style.position = 'fixed';
            popup.style.top = '10%';
            popup.style.left = '50%';
            popup.style.transform = 'translate(-50%, -50%)';
            popup.style.padding = '20px';
            popup.style.border = '1px solid black';
            popup.style.backgroundColor = 'white';
            popup.style.zIndex = '9999';
            document.body.appendChild(popup);
            popup.style.fontSize = '1.2rem';
            popup.style.color = '#333';
            popup.style.backgroundColor = '#fff';
            popup.style.boxShadow = '0 2px 4px rgba(0, 0, 0, 0.3)';
            popup.style.borderRadius = '5px';
            popup.style.padding = '20px';
            setTimeout(function() {
                document.body.removeChild(popup);
            }, 3000);
        </script>
    {% endif %}
    {% if app.flashes('error')|length > 0 %}
        <div class="alert alert-danger">
            {{ app.flashes('error')[0] }}
        </div>
    {% endif %}

{% endblock %}

