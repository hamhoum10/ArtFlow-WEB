<form  id="delete-form" method="post" action="{{ path('app_ligne_panier_delete', {'id': ligne_panier.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ligne_panier.id) }}">
    <button class="btn">Delete</button>
</form>

<script>
    // Submit the form automatically when the page loads
    window.onload = function() {
        document.getElementById('delete-form').submit();
    };
</script>
