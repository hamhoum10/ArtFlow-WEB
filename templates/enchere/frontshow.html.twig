<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__left product__thumb nice-scroll">
                        {% for image in enchere.images %}
                            <a class="pt {% if loop.first %}active{% endif %}" href="#product-{{ loop.index }}">
                                <img src="{{ asset('uploads/' ~ image) }}" alt="{{ image }}" onmouseover="loopImage()" onmouseout="resetImage()">
                            </a>
                        {% endfor %}
                    </div>

                    <script>
                        function loopImage() {
                            const img = event.target;
                            img.style.transform = "scale(1.2)";
                        }

                        function resetImage() {
                            const img = event.target;
                            img.style.transform = "scale(1)";
                        }
                    </script>

                    <div class="product__details__slider__content">
                        <div class="owl-item active" style="width: 518.2px;">
