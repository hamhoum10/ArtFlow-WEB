                        <div class="discount__countdown" id="countdown-time-{{ loop.index }}">
                            <div class="countdown__item">
                                <span id="days-{{ loop.index }}"></span>
                                <p>Days</p>
                            </div>
                            <div class="countdown__item">
                                <span id="hours-{{ loop.index }}"></span>
                                <p>Hours</p>
                            </div>
                            <div class="countdown__item">
                                <span id="minutes-{{ loop.index }}"></span>
                                <p>Minutes</p>
                            </div>
                            <div class="countdown__item">
                                <span id="seconds-{{ loop.index }}"></span>
                                <p>Seconds</p>
                            </div>
                        </div>

                        <script>
                            // Set the date you want the countdown to end
                            const countDownDate{{ loop.index }} = new Date('{{ enchere.dateLimite|date('Y-m-d') }}').getTime();

                            // Update the countdown every second
                            const x{{ loop.index }} = setInterval(function() {

                                // Get the current date and time
                                const now = new Date().getTime();

                                // Calculate the time remaining between now and the countdown date
                                const distance = countDownDate{{ loop.index }} - now;

                                // Calculate the days, hours, minutes and seconds remaining
                                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                                // Update the HTML elements with the corresponding values
                                document.getElementById("days-{{ loop.index }}").innerHTML = days;
                                document.getElementById("hours-{{ loop.index }}").innerHTML = hours;
                                document.getElementById("minutes-{{ loop.index }}").innerHTML = minutes;
                                document.getElementById("seconds-{{ loop.index }}").innerHTML = seconds;

                                // If the countdown is over, stop updating the values
                                if (distance < 0) {
                                    clearInterval(x{{ loop.index }});
                                    document.getElementById("countdown-time-{{ loop.index }}").innerHTML = "EXPIRED";
                                }
                            }, 1000);
                        </script>




                    <a href={{ path('app_enchere_showfront', {'ide': enchere.ide}) }}>participate</a>
